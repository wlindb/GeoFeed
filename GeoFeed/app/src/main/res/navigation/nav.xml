<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="se.umu.student.wili0037.geofeed.fragments.MainFragment"
        android:label="GeoFeed" >
        <action
            android:id="@+id/action_mainFragment_to_createPostFragment"
            app:destination="@id/createPostFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_mainFragment_to_viewPostFragment"
            app:destination="@id/viewPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPostFragment"
        android:name="se.umu.student.wili0037.geofeed.fragments.CreatePostFragment"
        android:label="Create Post"
        tools:layout="@layout/fragment_create_post" >
        <action
            android:id="@+id/action_createPostFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/viewPostFragment"
        android:name="se.umu.student.wili0037.geofeed.fragments.ViewPostFragment"
        android:label="fragment_view_post"
        tools:layout="@layout/fragment_view_post" >
        <action
            android:id="@+id/action_viewPostFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>